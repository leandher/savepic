<html>

<body>
    <div class="erros">
        <% if(errosValidacao){%>
            <ul>
                <%for(var i = 0; i< errosValidacao.length; i++){%>
                    <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                <%}%>
            </ul>
        <%}%>
    </div>
    <form action="/produtos" method="post">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" value="<%=produto.titulo%>" />
        </div>
        <div>
            <label for="">Preço</label>
            <input type="text" name="preco" value="<%=produto.preco%>" />
        </div>
        <div>
            <label for="">Descrição</label>
            <textarea name="descricao" cols="20" rows="10">
                    <%=produto.descricao%>
            </textarea>
        </div>
        <input type="submit" value="gravar"/>
    </form>
</body>

</html>